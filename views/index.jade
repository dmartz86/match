doctype html
html(ng-app='Match')
  head
    title {{title}}
    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/css/bootstrap-theme.css')
  body(ng-controller='GameController')
    Header 
  .container
    div
      .row
        .col-md-4
          .navbar-header
             button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
             span.icon-toggle
             a.navbar-brand(href='/') 
             label( style='font-size: 30px;') Time: {{time}}
        .col-md-6
          .btn-group.btn-group-justified
            a.btn.btn-success.col-sm-3(href='/')
              i.glyphicon.glyphicon-print
              br
              span.badge
                span(ng-bind='files.printed || 0')
            a.btn.btn-warning.col-sm-3(href='/')
              i.glyphicon.glyphicon-folder-open
              br
              span.badge
                span(ng-bind='files.length')
            a.btn.btn-primary.col-sm-3(href='#')
              i.glyphicon.glyphicon-pause
              br
            a.btn.btn-primary.col-sm-3(href='/')
              i.glyphicon.glyphicon-play
              br
            a.btn.btn-primary.col-sm-3
              i.glyphicon.glyphicon-question-sign
              br
            span.btn.btn-primary.col-sm-3(href='#')
              i.glyphicon.glyphicon-comment
              br
              span.badge 4
            a.btn.btn-primary.col-sm-3
              i.glyphicon.glyphicon-cog
              br
              span.badge 3
        .col-md-2 
          span.btn.btn-primary(href='#')
            | daniel@monoapps.tk
        
      br 
      div.row
        form(role='form')
          .col-lg-1.form-group(ng-repeat='c in chs')
            button.btn.btn-danger.form-control(ng-bind='c.value', ng-click='try($index)', style='font-size: 90px; height: 190px; width: 95px;')

          script(type='text/javascript', src='/js/libs/jquery.js')
          script(type='text/javascript', src='/js/libs/angular.js')
          script(type='text/javascript', src='/js/libs/bootstrap.js')
          script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.6.0/underscore-min.js')
          script(type='text/javascript', src='/js/ng/app.js')
          script(type='text/javascript', src='/js/ng/match.js')
