#userNameModal.modal.fade(tabindex="-1", role="dialog", aria-labelledby="userNameModalLabel", aria-hidden="true")
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
        h4.modal-title Configuration
      .modal-body
        form(role="form")
          .form-group
            label Set your name
            input.form-control(ng-model='user.name')

          table.table.table-condensed.table-striped.table-bordered
            tr
              th Level
              th Attempt
              th Time
            tr(ng-repeat='m in stats')
              td
                div(align='center')
                  span(ng-bind='m.level')
              td
                div(align='center')
                  span(ng-bind='m.tries')
              td
                div(align='center')
                  span(ng-bind='m.time')
            tr(ng-show='stats.length==0')
              td(colspan='3')
                div(align='center') Statistics is emtpy
        .row
          .col-md-12
            h4 Reset game
          .col-md-3
          a.col-md-6.btn.btn-danger(ng-click="clearLocalStorage()") Reset
          .col-md-3

      .modal-footer
        button.btn.btn-default(type='button', data-dismiss='modal') Close
